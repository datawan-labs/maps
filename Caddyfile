{
  order pmtiles_proxy before reverse_proxy

  servers {
      metrics
  }
}

:9091 {
  metrics
}

:8080 {
  header {
      Access-Control-Allow-Origin *
      Access-Control-Allow-Methods "GET"
      defer
  }

  handle /tiles/planet* {
    pmtiles_proxy {
      bucket {$BUCKET}
      
      cache_size 256

      # used to embed a tiles URL in TileJSON.
      public_url {$PUBLIC_URL}
    }
  }

  file_server
}